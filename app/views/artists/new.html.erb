<h1>Add Artistr</h1>
<%= form_with(model: @artist, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "Artist Name" %>
  </div>
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>
